rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    allow write: if false;
    allow read: if request.auth != null;

    match /notes/{file} {
        allow delete: if false;
        allow read: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create, update: if request.auth != null && request.resource.data.keys().hasOnly(["baseName", "cTime", "data", "deleted", "deviceId", "entryTime", "ext", "fileHash", "fileStorageRef", "mTime", "path", "size", "syncerConfigId", "type", "userId", "vaultName", "version"]) && request.auth.uid == request.resource.data.userId;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
